{
  "name": "regex-extension",
  "alias": "Regex Club",
  "version": "1.0.0",
  "description": "Regex extension is used to notify the students about upcoming events and announcements in SNS College of Technology.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/balaji-sivasakthi/regex-extension"
  },
  "scripts": {
    "build": "tsc --noEmit && vite build",
    "build:watch": "cross-env __DEV__=true vite build --watch",
    "build:hmr": "rollup --config utils/reload/rollup.config.ts",
    "wss": "node utils/reload/initReloadServer.js",
    "dev": "npm run build:hmr && (run-p wss build:watch)",
    "test": "jest"
  },
  "type": "module",
  "dependencies": {
    "@types/firebase": "^3.2.1",
    "firebase": "^9.22.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-lottie": "^1.2.3"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^8.5.0",
    "@testing-library/react": "14.0.0",
    "@types/chrome": "0.0.224",
    "@types/jest": "29.5.1",
    "@types/node": "20.2.5",
    "@types/react": "18.0.21",
    "@types/react-dom": "18.0.11",
    "@types/ws": "^8.5.4",
    "@typescript-eslint/eslint-plugin": "5.59.9",
    "@typescript-eslint/parser": "5.59.7",
    "@vitejs/plugin-react": "4.0.0",
    "chokidar": "^3.5.3",
    "cross-env": "^7.0.3",
    "eslint": "8.36.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-react": "7.32.2",
    "fs-extra": "11.1.0",
    "jest": "29.5.0",
    "jest-environment-jsdom": "29.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "2.8.8",
    "rollup": "2.79.1",
    "sass": "1.55.0",
    "ts-jest": "29.0.2",
    "ts-loader": "9.4.3",
    "typescript": "4.8.3",
    "vite": "4.3.9",
    "ws": "8.13.0"
  }
}
